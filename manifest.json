{
  "manifest_version": 2,
  "name": "YouTube Shorts Toggle",
  "version": "1.0",

  "description": "Moves YouTube Shorts to a seperate toggle on your subscription page.",

  "icons": {
    "48": "icons/border-48.png",
    "96": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["src/main.js"]
    }
  ]
}